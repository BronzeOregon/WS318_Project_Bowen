<Window x:Class="WS318_Project_Bowen.AddUnitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WS318_Project_Bowen"
        mc:Ignorable="d"
        Title="AddUnitWindow" Height="450" Width="800">
    <Grid>
        <Border Grid.Row="1" Background="#191A2E" CornerRadius="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Create Unit" FontWeight="Bold" FontSize="18" Foreground="#FFD700"/>
                <Grid Height="80">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <TextBox x:Name="UnitName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Unit Name" VerticalAlignment="Center" Width="120"/>
                        <Label Content="Non-Vehicle Models" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="NonVehicleCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="NonVehicleCheck_Checked"/>
                        <Label Content="Vehicle Models" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="VehicleCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="VehicleCheck_Checked"/>
                    </StackPanel>
                </Grid>
                
                <StackPanel Orientation="Horizontal">
                    <Label Content="Model Selection | Search:"  Foreground="White"/>
                    <TextBox x:Name="SearchBar" Text="" Width="116" TextChanged="SearchBar_TextChanged"/>
                    <Button x:Name="AddModel" Content="Add Model" Margin="10,0,0,0" Click="AddModel_Click"/>
                </StackPanel>
                <DataGrid x:Name="ModelGrid" Height="151" SelectionChanged="ModelGrid_SelectionChanged"/>
                <Label Content="Added Models" Foreground="White" HorizontalAlignment="Center"/>
                <DataGrid x:Name="AddedModelsGrid" Height="64" SelectionChanged="AddedModelsGrid_SelectionChanged"/>
                <Button x:Name="CreateUnitButton" Content="Create Unit" Width="96" Height="32" Click="CreateUnit_Click" />
                <Label x:Name="ConfirmationLabel" Foreground="#FFF56241" FontSize="24" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
