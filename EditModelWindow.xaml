<Window x:Class="WS318_Project_Bowen.EditModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WS318_Project_Bowen"
        mc:Ignorable="d"
        Title="EditModelWindow" Height="1000" Width="1200">
    <Grid>
        <Border Grid.Row="1" Background="#191A2E" CornerRadius="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Edit/Remove Model" FontWeight="Bold" FontSize="18" Foreground="#FFD700"/>
                <Grid Height="80">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <TextBox x:Name="ModelName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Model Name" VerticalAlignment="Center" Width="120"/>
                        <Label Content="Non-Vehicle" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="NonVehicleCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="NonVehicleCheck_Checked"/>
                        <Label Content="Vehicle" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="VehicleCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="VehicleCheck_Checked"/>
                    </StackPanel>
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Model Selection | Search:"  Foreground="White"/>
                    <TextBox x:Name="ModelSearchBar" Text="" Width="116" TextChanged="ModelSearchBar_TextChanged"/>
                    <Button x:Name="PickModelRule" Content="Pick Model" Margin="10,0,0,0" Click="PickModel_Click"/>
                </StackPanel>
                <DataGrid x:Name="ModelGrid" Height="100" Margin="0,0,0,10" SelectionChanged="ModelGrid_SelectionChanged"/>
                <StackPanel x:Name="NonVehicleEntry" Orientation="Horizontal" Visibility="Collapsed">
                    <Label Content="M"  Foreground="White"/>
                    <TextBox x:Name="MValue" Text="6" Width="20"  />
                    <Label Content="WS"  Foreground="White"/>
                    <TextBox x:Name="WSValue" Text="1" Width="20"  />
                    <Label Content="BS"  Foreground="White"/>
                    <TextBox x:Name="BSValue" Text="4" Width="20"  />
                    <Label Content="S"  Foreground="White"/>
                    <TextBox x:Name="SValue" Text="-" Width="20"  />
                    <Label Content="T"  Foreground="White"/>
                    <TextBox x:Name="TValue" Text="1" Width="20"  />
                    <Label Content="W"  Foreground="White"/>
                    <TextBox x:Name="WValue" Text="1" Width="20"  />
                    <Label Content="I"  Foreground="White"/>
                    <TextBox x:Name="IValue" Text="1" Width="20"  />
                    <Label Content="A"  Foreground="White"/>
                    <TextBox x:Name="AValue" Text="1" Width="20"  />
                    <Label Content="Ld"  Foreground="White"/>
                    <TextBox x:Name="LdValue" Text="1" Width="20"  />
                    <Label Content="Cl"  Foreground="White"/>
                    <TextBox x:Name="ClValue" Text="1" Width="20"  />
                    <Label Content="Wp"  Foreground="White"/>
                    <TextBox x:Name="WpValue" Text="1" Width="20"  />
                    <Label Content="Int"  Foreground="White"/>
                    <TextBox x:Name="IntValue" Text="1" Width="20"  />
                    <Label Content="Sv"  Foreground="White"/>
                    <TextBox x:Name="SvValue" Text="5+" Width="20"  />
                    <Label Content="Inv"  Foreground="White"/>
                    <TextBox x:Name="InvValue" Text="-" Width="20"  />
                    <Label Content="Types"  Foreground="White"/>
                    <TextBox x:Name="TypeValue" Text="Infantry" Width="110"  />
                    <Label Content="Traits"  Foreground="White"/>
                    <TextBox x:Name="TraitsValue" Text="-" Width="110"  />
                </StackPanel>

                <StackPanel x:Name="VehicleEntry" Orientation="Horizontal" Visibility="Collapsed">
                    <Label Content="M"  Foreground="White"/>
                    <TextBox x:Name="VMValue" Text="10" Width="20"  />
                    <Label Content="BS"  Foreground="White"/>
                    <TextBox x:Name="VBSValue" Text="4" Width="20"  />
                    <Label Content="Front AV"  Foreground="White"/>
                    <TextBox x:Name="FrontAVValue" Text="10" Width="20"  />
                    <Label Content="Side AV"  Foreground="White"/>
                    <TextBox x:Name="SideAVValue" Text="10" Width="20"  />
                    <Label Content="Rear AV"  Foreground="White"/>
                    <TextBox x:Name="RearAVValue" Text="10" Width="20"  />
                    <Label Content="HP"  Foreground="White"/>
                    <TextBox x:Name="HPValue" Text="3" Width="20"  />
                    <Label Content="Transport Capacity"  Foreground="White"/>
                    <TextBox x:Name="CapacityValue" Text="0" Width="20"  />
                    <Label Content="Types"  Foreground="White"/>
                    <TextBox x:Name="VTypesValue" Text="Vehicle" Width="110"  />
                    <Label Content="Traits"  Foreground="White"/>
                    <TextBox x:Name="VTraitsValue" Text="-" Width="110"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Special Rule Selection | Search:"  Foreground="White"/>
                    <TextBox x:Name="SearchBar" Text="" Width="116" TextChanged="SearchBar_TextChanged"/>
                    <Button x:Name="AddSpecialRule" Content="Add Rule" Margin="10,0,0,0" Click="AddSpecialRule_Click"/>
                    <Button x:Name="DeleteRuleButton" Content="Delete Rule" Margin="10,0,0,0" Click="DeleteRuleButton_Click"/>
                </StackPanel>
                <DataGrid x:Name="SpecialRuleGrid" Height="150" SelectionChanged="SpecialRuleGrid_SelectionChanged"/>
                <Label Content="Added Rules" Foreground="White" HorizontalAlignment="Center"/>
                <DataGrid x:Name="AddedRulesGrid" Height="64" SelectionChanged="AddedRulesGrid_SelectionChanged"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="Weapon Selection | Search:"  Foreground="White"/>
                    <TextBox x:Name="WeaponSearchBar" Text="" Width="116" TextChanged="WeaponSearchBar_TextChanged"/>
                    <Button x:Name="PickWeaponRule" Content="Add Weapon" Margin="10,0,0,0" Click="PickWeapon_Click"/>
                    <Button x:Name="DeleteWeaponButton" Content="Delete Weapon" Margin="10,0,0,0" Click="DeleteWeaponButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <DataGrid x:Name="RangedWeaponGrid" Height="100" Margin="0,0,5,0" SelectionChanged="RangedWeaponGrid_SelectionChanged"/>
                    <DataGrid x:Name="MeleeWeaponGrid" Height="100" Margin="5,0,0,0" SelectionChanged="MeleeWeaponGrid_SelectionChanged"/>
                </StackPanel>

                <StackPanel>
                    <Label Content="Added Weapons" Foreground="White" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <DataGrid x:Name="AddedRangedWeaponsGrid" Height="100" Margin="0,0,5,0" SelectionChanged="AddedRangedWeaponsGrid_SelectionChanged"/>
                        <DataGrid x:Name="AddedMeleeWeaponsGrid" Height="100" Margin="5,0,0,0" SelectionChanged="AddedMeleeWeaponsGrid_SelectionChanged"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="SaveModelButton" Content="Save Model" Width="96" Height="32" Click="SaveModelButton_Click" />
                <Button x:Name="DeleteModelButton" Content="Delete Model" Width="96" Height="32" Click="DeleteModelButton_Click"/>
                </StackPanel>
                <Label x:Name="ConfirmationLabel" Foreground="#FFF56241" FontSize="24" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
