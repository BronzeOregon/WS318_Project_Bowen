<Page x:Class="WS318_Project_Bowen.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}">

    <Grid Background="{DynamicResource Theme_BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Sidebar -->
        <StackPanel Background="#222438" Grid.RowSpan="2" Orientation="Vertical" Width="200">
            <TextBlock Text="Manager" Foreground="White" FontWeight="Bold" FontSize="18" Margin="8,8,8,0"/>
            <StackPanel Margin="0,24,0,0">
                <TextBlock Text="Toolbox" Foreground="#FFD700" FontWeight="Bold" FontSize="14" Margin="16,0,0,0"/>
                <Button Content="New Army" Margin="16,8,16,0" Width="168" Height="32" />
                <Button Content="Load Army" Margin="16,8,16,0" Width="168" Height="32" />
                <Button Content="New Special Rule" Margin="16,8,16,0" Width="168" Height="32" Click="NewSpecialRule_Click" />
                <Button Content="Edit/Remove Special Rule" Margin="16,8,16,0" Width="168" Height="32" Click="EditSpecialRule_Click" />
                <Button Content="New Weapon" Margin="16,8,16,0" Width="168" Height="32" Click="NewWeapon_Click" />
                <Button Content="Edit/Remove Weapon" Margin="16,8,16,0" Width="168" Height="32" Click="EditWeapon_Click" />
                <Button Content="New Model" Margin="16,8,16,0" Width="168" Height="32" Click="NewModel_Click"/>
                <Button Content="Edit/Remove Model" Margin="16,8,16,0" Width="168" Height="32" Click="EditModel_Click"/>
                <Button Content="New Unit" Margin="16,8,16,0" Width="168" Height="32" Click="NewUnit_Click"/>
                <Button Content="Edit/Remove Unit" Margin="16,8,16,0" Width="168" Height="32" Click="EditUnit_Click"/>
            </StackPanel>
        </StackPanel>
        <!-- Header -->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Background="#141628" VerticalAlignment="Center" Height="56">
            <TextBlock Text="Unofficial Horus Heresy 3rd Edition Unit Manager" FontSize="22" Foreground="White" VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Main content -->
        <Grid Grid.Column="1" Grid.Row="1" Margin="16,16,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="64" />
            </Grid.RowDefinitions>
            <!-- Army Setup Panel -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" HorizontalAlignment="Left">
                <TextBlock Text="Legion:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,8,0" Foreground="White"/>
                <ComboBox Width="160" Height="32" Margin="0,0,16,0">
                    <ComboBoxItem Content="Sons of Horus" />
                    <ComboBoxItem Content="Imperial Fists" />
                    <ComboBoxItem Content="Ultramarines" />
                </ComboBox>
                <TextBlock Text="Points Limit:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,8,0" Foreground="White"/>
                <TextBox Width="80" Height="32" />
            </StackPanel>
            <!-- Army List Panel -->
            <Border Grid.Row="1" Background="#191A2E" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="Units" FontWeight="Bold" FontSize="18" Foreground="#FFD700"/>
                    <ListBox MaxHeight="1000"  Margin="0,8,0,0">
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Tactical Squad" FontSize="14" VerticalAlignment="Center"/>
                                <Button Width="32" Height="32" Margin="16,0,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image Source="https://img.icons8.com/ios-filled/24/ff4d4d/delete-sign.png" Width="24" Height="24"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Contemptor Dreadnought" FontSize="14" VerticalAlignment="Center"/>
                                <Button Width="32" Height="32" Margin="16,0,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image Source="https://img.icons8.com/ios-filled/24/ff4d4d/delete-sign.png" Width="24" Height="24"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Add Unit" Width="96" Height="32" Margin="0,8,0,0" Click="AddUnit_Click" />
                        <Button Content="Remove Unit" Width="96" Height="32" Margin="0,8,0,0" Click="RemoveUnit_Click" />
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            <!-- Summary Panel -->
            <Border Grid.Row="2" Background="#222438" CornerRadius="8" Padding="16" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Unit Count: " Margin="8,0,0,0" Foreground="White"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>