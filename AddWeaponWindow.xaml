<Window x:Class="WS318_Project_Bowen.AddWeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WS318_Project_Bowen"
        mc:Ignorable="d"
        Title="AddWeaponWindow" Height="450" Width="800">
    <Grid>
        <Border Grid.Row="1" Background="#191A2E" CornerRadius="8" Padding="16">
            <StackPanel>
                <TextBlock Text="Add Weapon" FontWeight="Bold" FontSize="18" Foreground="#FFD700"/>
                <Grid Height="80">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <TextBox x:Name="WeaponName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Rule Name" VerticalAlignment="Center" Width="120"/>
                        <Label Content="RangedWeapon" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="RangedWeaponCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="RangedWeaponCheck_Checked"/>
                        <Label Content="MeleeWeapon" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" HorizontalContentAlignment="Center"/>
                        <RadioButton x:Name="MeleeWeaponCheck" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="MeleeWeaponCheck_Checked"/>
                    </StackPanel>
                </Grid>
                <StackPanel x:Name="RangedEntry" Orientation="Horizontal" Visibility="Collapsed">
                    <Label Content="Range"  Foreground="White"/>
                    <TextBox x:Name="RangeValue" Text="12" Width="20"  />
                    <Label Content="FP"  Foreground="White"/>
                    <TextBox x:Name="FPValue" Text="1" Width="20"  />
                    <Label Content="RS"  Foreground="White"/>
                    <TextBox x:Name="RSValue" Text="4" Width="20"  />
                    <Label Content="AP"  Foreground="White"/>
                    <TextBox x:Name="RangedAPValue" Text="-" Width="20"  />
                    <Label Content="D"  Foreground="White"/>
                    <TextBox x:Name="RangedDValue" Text="1" Width="20"  />
                    <Label Content="Traits"  Foreground="White"/>
                    <TextBox x:Name="RangedTraitsValue" Text="-" Width="110"  />
                </StackPanel>
                
                <StackPanel x:Name="MeleeEntry" Orientation="Horizontal" Visibility="Collapsed">
                    <Label Content="IM"  Foreground="White"/>
                    <TextBox x:Name="IMValue" Text="I" Width="20"  />
                    <Label Content="AM"  Foreground="White"/>
                    <TextBox x:Name="AMValue" Text="A" Width="20"  />
                    <Label Content="AS"  Foreground="White"/>
                    <TextBox x:Name="ASValue" Text="S" Width="20"  />
                    <Label Content="AP"  Foreground="White"/>
                    <TextBox x:Name="MeleeAPValue" Text="-" Width="20"  />
                    <Label Content="D"  Foreground="White"/>
                    <TextBox x:Name="MeleeDValue" Text="1" Width="20"  />
                    <Label Content="Traits"  Foreground="White"/>
                    <TextBox x:Name="MeleeTraitsValue" Text="-" Width="110"  />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Special Rule Selection | Search:"  Foreground="White"/>
                    <TextBox x:Name="SearchBar" Text="" Width="116" TextChanged="SearchBar_TextChanged"/>
                    <Button x:Name="AddSpecialRule" Content="Add Rule" Margin="10,0,0,0" Click="AddSpecialRule_Click"/>
                </StackPanel>
                <DataGrid x:Name="SpecialRuleGrid" Height="151" SelectionChanged="SpecialRuleGrid_SelectionChanged"/>
                <Label Content="Added Rules" Foreground="White" HorizontalAlignment="Center"/>
                <DataGrid x:Name="AddedRulesGrid" Height="64"/>
                <Button x:Name="AddWeaponButton" Content="Add Weapon" Width="96" Height="32" Click="Button_Click" />
                <Label x:Name="ConfirmationLabel" Foreground="#FFF56241" FontSize="24" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
